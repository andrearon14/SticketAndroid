<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newticketchoose"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.newticketchoose.NewTicketChooseFragment">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <Button
        android:id="@+id/buttonChooseSuper"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Elegir Supermercado"
        android:background="@drawable/button"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center_horizontal" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/buttonChooseTime"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Elegir por Tiempo"
        android:background="@drawable/button"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center_horizontal" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

</LinearLayout>